<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:id="@+id/product_detail_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/test_img"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:id="@+id/product_detail_title"
               android:layout_width="190dp"
               android:layout_height="wrap_content"
               android:maxLines="2"
               android:textSize="10sp"
               android:text="Đèn ngu 3d chat luong cao"
               android:paddingStart="5dp"
               android:paddingTop="8dp"
               android:paddingEnd="8dp"
               android:paddingBottom="10dp"/>

           <TextView
               android:id="@+id/product_detail_price"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="12dp"
               android:paddingStart="5dp"
               android:text="đ239000"
               android:textColor="@color/design_default_color_error" />
       </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/product_detail_increase"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="center"
                android:src="@android:drawable/ic_input_add" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/product_detail_quantity"/>

            <ImageButton
                android:id="@+id/product_detail_decrease"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="center"
                android:src="@android:drawable/button_onoff_indicator_on" />


        </LinearLayout>

        <TextView
            android:id="@+id/product_detail_sum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="239000"
            android:textColor="@color/design_default_color_error" />

    </LinearLayout>
</androidx.cardview.widget.CardView>